    <link rel="stylesheet" th:href="@{/css/bootstrap.min.css}" href="css/bootstrap.min.css" />
    <link rel="stylesheet" th:href="@{/css/bootstrap-responsive.min.css}" href="css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" th:href="@{/css/main.css}" href="css/main.css" />

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script th:src="@{/js/html5shiv.js}" src="js/html5shiv.js"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
    <link th:href="@{/img/apple-touch-icon-144-precomposed.png}" rel="apple-touch-icon-precomposed" href="img/apple-touch-icon-144-precomposed.png" sizes="144x144" />
    <link th:href="@{/img/apple-touch-icon-114-precomposed.png}" rel="apple-touch-icon-precomposed" href="img/apple-touch-icon-114-precomposed.png" sizes="114x114" />
    <link th:href="@{/img/apple-touch-icon-72-precomposed.png}"  rel="apple-touch-icon-precomposed" href="img/apple-touch-icon-72-precomposed.png"  sizes="72x72" />
    <link th:href="@{/img/apple-touch-icon-57-precomposed.png}"  rel="apple-touch-icon-precomposed" href="img/apple-touch-icon-57-precomposed.png" />
    <link th:href="@{/img/favicon.png}" rel="shortcut icon" href="img/favicon.png"/>

    <script th:src="@{/js/jquery-1.10.2.min.js}" type="text/javascript" src="js/jquery-1.10.2.min.js"></script>
    <script th:src="@{/js/bootstrap.min.js}" type="text/javascript" src="js/bootstrap.min.js"></script>
    <script th:src="@{/js/vendor/modernizr-2.6.2-respond-1.1.0.min.js}" src="js/vendor/modernizr-2.6.2-respond-1.1.0.min.js" />
</head>
<body>

<div class="container">

    <div th:include="common/header :: top" />

    <div class="hero-unit">
        <form action="#" th:attr="action=@{/${entity.name}/filter.do}" class="form-horizontal" id="${entity.name}Form" method="post">
            <div class="well clearfix">
                <fieldset>
                    <legend>Person Search Filter</legend>
                    <div class="row-fluid">
                        <div class="span6">
#foreach( ${property} in ${entity.properties})
#if ($velocityCount % 2 != 0)
                            <label for="${property.name}">${property.name}: </label>
                            <input type="text" class="input-xlarge"  name="${property.name}" id="${property.name}"/>
#end
#end
                        </div>
                        <div class="span5">
#foreach( ${property} in ${entity.properties})
#if ($velocityCount % 2 == 0)
                            <label for="${property.name}">${property.name}: </label>
                            <input type="text" class="input-xlarge"  name="${property.name}" id="${property.name}"/>
#end
#end
                        </div>
                    </div>
                </fieldset>
                <br />
                <button class="btn btn-primary">Search</button>
                <button class="btn">Clear</button>
                <button class="btn btn-primary" formmethod="get" th:formaction="@{/${entity.name}/create.do}">New</button>
            </div>
        </form>
    </div>

    <hr />

    <table class="table table-striped">
        <thead>
        <tr>
#foreach( ${property} in ${entity.properties})
            <th>${property.name}</th>
#end
            <th> - </th>
        </tr>
        </thead>
        <tbody>
        <tr th:each="${entityBeanName},row : *{${entityBeanName}List}">
#foreach( ${property} in ${entity.properties})
            <td th:text="${open}${entityBeanName}.${property.name}}">field </td>
#end
            <td>
                <a href="edit.html" th:href="@{/${entity.name}/edit.do(id=${person.id})}"><i class="icon-edit"></i></a>
                <a href="show.html" th:href="@{/${entity.name}/show.do(id=${person.id})}"><i class="icon-search"></i></a>
            </td>
        </tr>
        </tbody>
    </table>

    <!-- Pagination Bar -->
    <div th:fragment="paginationbar">
        <div class="pagination pagination-centered">
            <ul>
                <li th:class="${open}${entityBeanName}List.firstPage}  ? 'disabled' : ''">
                    <span th:if="${open}${entityBeanName}List.firstPage}">← First</span>
                    <a th:if="${open}not ${entityBeanName}List.firstPage}" th:href="@{/Person/filter.do(page.page=1,page.size=${open}${entityBeanName}List.size})}">← First</a>
                </li>
                <li th:class="${open}${entityBeanName}List.hasNextPage()}? '' : 'disabled'">
                    <span th:if="${open}not ${entityBeanName}List.hasNextPage()}">«</span>
                    <a th:if="${open}${entityBeanName}List.hasNextPage()}" th:href="@{/Person/filter.do(page.page=${open}${entityBeanName}List.number-1},page.size=${open}${entityBeanName}List.size})}" title="Go to previous page">«</a>
                </li>
                <li th:each="item : ${beans.pageableSupport.getPageList( personList )}" th:class="${item.current}? 'active' : ''">
                    <span th:if="${item.current}" th:text="${item.number}">1</span>
                    <a th:if="${open}not item.current}" th:href="@{/Person/filter.do(page.page=${item.number},page.size=${open}${entityBeanName}List.size})}">
                        <span th:text="${item.number}">1</span>
                    </a>
                </li>
                <li th:class="${open}${entityBeanName}List.hasPreviousPage()}? '' : 'disabled'">
                    <span th:if="${open}not personList.hasPreviousPage()}">»</span>
                    <a th:if="${open}${entityBeanName}List.hasPreviousPage()}" th:href="@{/Person/filter.do(page.page=${open}${entityBeanName}List.number+1},page.size=${open}${entityBeanName}List.size})}" title="Go to next page">»</a>
                </li>
                <li th:class="${open}${entityBeanName}List.lastPage}? 'disabled' : ''">
                    <span th:if="${open}${entityBeanName}List.lastPage}">Last →</span>
                    <a th:if="${open}not personList.lastPage}" th:href="@{/Person/filter.do(page.page=${open}${entityBeanName}List.totalPages},page.size=${open}${entityBeanName}List.size})}">Last →</a>
                </li>
            </ul>
        </div>
    </div>

    <div th:substituteby="common/footer :: copy"></div>

</div>

</body>
</html>