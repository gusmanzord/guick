<head>
    <title>WDN Consultancy and Solution Developer</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="description" content="Guick Generated Example" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="../css/bootstrap.min.css" />
    <link rel="stylesheet" href="../css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="../css/main.css" />
    <script src="../js/vendor/modernizr-2.6.2-respond-1.1.0.min.js" />
</head>
<body>

<div class="container">

    <div th:include="common/header :: top" />

    <div class="hero-unit">
        <div class="row-fluid">
            <div class="span12">
                <form action="#" th:attr="action=@{/${entity.name}/filter.do}" class="form-horizontal" id="${entity.name}Form" method="post">
                    <div class="span12">
                        <div class="well clearfix">
                            <fieldset>
                                <legend>Creating new Person</legend>
                                <div class="span7">
#foreach( ${property} in ${entity.properties})
                                    <div class="control-group">
                                        <label class="control-label">${property.name}: </label>
                                        <div class="controls">
                                            <input type="text" class="input-xlarge"  name="${property.name}"  id="${property.name}"/>
                                        </div>
                                    </div>
#end
                                </div>
                            </fieldset>
                            <button class="btn btn-primary" th:attr="formaction=@{/${entity.name}/create.do}">Save</button>
                            <button class="btn">Back</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <hr />

    <div th:substituteby="common/footer :: copy"></div>

</div>

</body>
