buildscript {
    repositories {
        mavenCentral()
    }
    dependencies {
        classpath "net.saliman:gradle-cobertura-plugin:2.2.7"
        // just for runnable jars
        // classpath("org.springframework.boot:spring-boot-gradle-plugin:1.2.3.RELEASE")
    }
}

apply plugin: 'groovy'
apply plugin: 'idea'
apply plugin: 'spring-boot' // Just for runnable jars
//apply plugin: 'war'
apply plugin: 'application'

mainClassName = "${project.group}.${project.name}.Application"

apply plugin: 'net.saliman.cobertura'

war {
    baseName = '${project.name}'
    version =  '1.0.0-SNAPSHOT'
}

repositories {
    mavenLocal()
    mavenCentral()
    maven { url 'http://p-intcont01.pgj.rj.gov.br/nexus/content/groups/public' }
    maven { url 'http://repo.spring.io/libs-release' }
}

configurations.all {
    resolutionStrategy {
        eachDependency {
            if (it.requested.group == 'org.apache.tomcat.embed') {
                it.useVersion '7.0.59'
            }
        }
    }
}

dependencies {

    // spring data
    compile 'org.springframework.boot:spring-boot-starter-web:1.2.3.RELEASE'
    compile 'org.springframework.boot:spring-boot-starter-data-jpa:1.2.3.RELEASE'
    //compile 'org.springframework.boot:spring-boot-starter-data-mongodb:1.2.3.RELEASE'
    compile 'org.springframework.boot:spring-boot-starter-security:1.2.3.RELEASE'
    compile 'org.springframework.boot:spring-boot-starter-logging:1.2.3.RELEASE'
    compile 'org.springframework.boot:spring-boot-starter-actuator:1.2.3.RELEASE'
    compile 'org.springframework:spring-context-support:4.0.7.RELEASE'
    //compile 'org.activiti:spring-boot-starter-basic:5.17.0'

    compile "org.hibernate:hibernate-ehcache:4.3.8.Final"
    compile "org.mybatis:mybatis:3.2.8"
    compile "org.mybatis:mybatis-spring:1.2.2"
    compile "com.voodoodyne.jackson.jsog:jackson-jsog:1.0.1"

    compile 'org.apache.commons:commons-lang3:3.2.1'
    compile 'org.aspectj:aspectjrt:1.7.4'
    compile 'org.aspectj:aspectjweaver:1.7.4'
    compile 'commons-lang:commons-lang:2.6'
    compile 'org.codehaus.groovy:groovy-all:2.3.10'
    compile 'joda-time:joda-time:2.5'
    compile 'com.google.guava:guava:18.0'

    //providedRuntime 'org.springframework.boot:spring-boot-starter-tomcat:1.2.3.RELEASE'

    testCompile 'org.concordion:concordion:1.4.6'
    testCompile 'org.springframework.boot:spring-boot-starter-test:1.2.3.RELEASE'
    testCompile 'org.spockframework:spock-spring:1.0-groovy-2.3'
    testCompile 'de.flapdoodle.embed:de.flapdoodle.embed.mongo:1.47.0'
    testCompile 'com.gmongo:gmongo:1.3'
    testCompile 'c3p0:c3p0:0.9.1.2'

    //runtime 'com.h2database:h2:1.4.187'
    runtime 'oracle-jdbc:ojdbc6:11.2.0.4'
}