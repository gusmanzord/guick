#set( $js  = "$")
#set( $entityBeanName = ${util.uncapitalize($entity.name)} )
#set( $projectBeanName = ${util.uncapitalize($project.name)} )
<!-- sessões -->
<section class="content-header">
    <i class="fa fa-search"></i> : <small> ${entity.title} </small>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">${entity.title}</li>
    </ol>
</section>

<section class="content">
    <div ng-controller="${entityBeanName}Controller">
        <form name="${entityBeanName}Form" novalidate>
            <tabset>
                <tab heading="Filtro de busca" ng-click="setTextSearchActive(true)">
                    <div class="nav-tabs-custom">
                        <div class="tab-content">
                            <div class="box box-primary">
                                <div class="box-header"><h2 class="box-title"></h2></div>
                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label" for="searchField.text" popover-trigger="mouseenter">Busca por texto</label>
                                                <input class="form-control" type="text" ng-model="searchField.text" placeholder="busca por texto.." id="searchField.text"
                                                    popover-trigger="mouseenter"  popover-placement="top" popover="Busca por texto"
                                                />
                                            </div>
                                        </div>
#if(${entity.getActiveProperty()})
                                        <div class="col-md-6">
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" ng-model="searchField.active"> Ativo
                                                </label>
                                            </div>
                                        </div>
#end
                                    </div>
                                </div>
                                <div class="box-footer">
                                    <div class="form-group">
                                        <button type="button" class="btn btn-primary btn-sm" ng-click="search()"><i class="glyphicon glyphicon-search"></i> Buscar</button>
                                        <div class="btn btn-primary btn-sm" ng-click="clearForm()"><i class="glyphicon glyphicon-trash"></i> Limpar Filtro</div>
                                        <button type="button" class="btn btn-primary btn-sm" ng-click="open('lg')"><i class="fa fa-plus-circle"></i> Cadastrar Novo</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </tab>
                <tab heading="Busca Avançada" ng-click="setTextSearchActive(false)">
                    <div class="nav-tabs-custom">
                        <div class="tab-content">
                            <div class="box box-primary">
                                <div class="box-header"><h2 class="box-title"></h2></div>
                                <div class="box-body">
                                    <div class="row">
                                        <div ng-include src="'views/crud/${entity.name}/${entity.name}FilterFieldset.html'"></div>
                                    </div>
                                </div>
                                <div class="box-footer">
                                    <div class="form-group">
                                        <button type="button" class="btn btn-primary btn-sm" ng-click="search()"><i class="glyphicon glyphicon-search"></i> Buscar</button>
                                        <div class="btn btn-primary btn-sm" ng-click="clearForm()"><i class="glyphicon glyphicon-trash"></i> Limpar Filtro</div>
                                        <button type="button" class="btn btn-primary btn-sm" ng-click="open('lg')"><i class="fa fa-plus-circle"></i> Cadastrar Novo</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </tab>
            </tabset>
        </form>
        <!-- fim sessão -->
        <!-- sessão -->
        <div class="col-xs-12">
            <div class="row">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="box-header"><h3 class="box-title">Resultado da Busca</h3></div>
                        <div class="gridStyle" ng-grid="gridOptions"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

