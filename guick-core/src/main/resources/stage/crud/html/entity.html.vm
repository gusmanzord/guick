<!-- sess천es -->
<section class="content-header"><h1><i class="fa fa-tachometer"></i> ${entity.name}</h1></section>

<div ng-controller="${entityBeanName}Controller">
    <section class="content">
        <form name="medidorForm" novalidate>
            <div class="col-md-12">
                <div class="row">
                    <div class="box box-primary">
                        <div class="box-header"><h3 class="box-title">Dados Cadastrais</h3></div>

                        <div class="box-body">
                            <div class="row">
                                <div ng-include src="'components/crud/${entity.name}Fieldset.html'"></div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <button type="button" class="btn btn-primary" ng-click="open('lg')"><i class="fa fa-plus-circle"></i> Cadastrar Novo</button>
                                        <div class="btn btn-primary"><i class="fa fa-circle"></i> Limpar Filtro</div>
                                        <button type="button" class="btn btn-primary" ng-click="search()"><i class="fa fa-search"></i> Buscar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <!-- fim sess찾o -->
        <!-- sess찾o -->
        <div class="col-xs-12">
            <div class="row">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="box-header"><h3 class="box-title">Resultado da Busca</h3></div>
                        <div class="gridStyle" ng-grid="gridOptions"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- fim sess찾o -->

    <script type="text/ng-template" id="create${entity.name}Modal.html">
        <div class="modal-header">
            <h3 class="modal-title">I'm a modal!</h3>
        </div>
        <div class="modal-body">
            <div ng-include src="'components/crud/${entityBeanName}Fieldset.html'"></div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-warning" ng-click="cancel()">Cancelar</button>
            <button class="btn btn-primary" ng-click="ok()">Gravar</button>
        </div>
    </script>

</div>
</div>