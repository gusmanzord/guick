#set( $js  = "$")
#set( $entityBeanName = ${util.uncapitalize($entity.name)} )
#set( $projectBeanName = ${util.uncapitalize($project.name)} )
<!-- sess천es -->
<section class="content-header"><h1><i class="fa fa-tachometer"></i> ${entity.name}</h1></section>

<section class="content">
    <div ng-controller="${entityBeanName}Controller">
        <form name="medidorForm" novalidate>
            <div class="col-md-12">
                <div class="row">

                    <div class="box box-primary">
                        <div class="box-header"><h3 class="box-title">Dados Cadastrais</h3></div>
                        <div class="box-body">
                            <div class="row">
                                <div ng-include src="'views/crud/${entity.name}/${entity.name}Fieldset.html'"></div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <div class="form-group">
                                <button type="button" class="btn btn-primary" ng-click="open('lg')"><i class="fa fa-plus-circle"></i> Cadastrar Novo</button>
                                <button class="btn btn-primary" ng-click="clearForm()"><span class="glyphicon glyphicon-trash"></span> Limpar</button>
                                <button class="btn btn-primary" ng-click="search()"><span class="glyphicon glyphicon-search"></span> Pesquisar</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </form>
        <!-- fim sess찾o -->
        <!-- sess찾o -->
        <div class="col-xs-12">
            <div class="row">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="box-header"><h3 class="box-title">Resultado da Busca</h3></div>
                        <div class="gridStyle" ng-grid="gridOptions"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- fim sess찾o -->

        <script type="text/ng-template" id="create${entity.name}Modal.html">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">${entity.name}</h4>
            </div>
            <div class="modal-body">
                <div class="box box-primary">
                    <div class="box-header"></div>
                    <div class="box-body">
                        <div class="row">
                            <div ng-include src="'views/crud/${entity.name}/${entity.name}Fieldset.html'"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" ng-click="cancel()"><i class="fa fa-ban"></i> Cancelar</button>
                <button class="btn btn-success" ng-click="save()"><i class="glyphicon glyphicon-save"></i> Gravar</button>
            </div>
        </script>
    </div>
</section>
